{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2019", "DOM"],
    "target": "ES2019",
    "composite": true,
    "noEmit": false,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "#/*": ["./tests/*"]
    },
    "outDir": "build"
  },
  "include": ["**/*.ts", "**/*.tsx", "tests/**/*"],
  "exclude": ["node_modules", "./build/**/*"]
}
